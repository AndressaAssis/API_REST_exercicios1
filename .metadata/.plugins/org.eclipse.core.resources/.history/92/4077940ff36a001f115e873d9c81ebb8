package exercicios;

public class CalculadoraSalario {
	public static void main(String[] args) {
		String nome = "Andressa";
		double salario = 1000.00;
		double descontoSalario = 0.0;
		
		if (salario <= 1751.81) {
			descontoSalario = (salario * 0.08);
		} else if (salario <= 2919.72) {
			descontoSalario = (salario * 0.9);
		} else if (salario <= 5839.45) {
			descontoSalario = (salario * 0.10);
		} else {
			descontoSalario = (salario * 0.11);
		}
		System.out.println("A funcionária " + nome + " receberá este mês o total de: " + descontoSalario + " com todos os descontos.");
	}
}
